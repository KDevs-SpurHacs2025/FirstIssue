{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*"],
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*"],
    "ts-node": {
      "esm": true
    }
  }